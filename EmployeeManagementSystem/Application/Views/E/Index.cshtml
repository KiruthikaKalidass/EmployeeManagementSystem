@model IEnumerable<Application.Models.EModel>
<style>
.btn {
  background-color:white;
  border: none;
  color: black;
  padding: 12px 16px;
  font-size: 16px;
  cursor: pointer;
}
</style>
<button class="btn">
    <i class="fa fa-home" title="Home Page"></i></button>
    @Html.ActionLink("Create", "Create")

    <table class="table">
        <tr>
         

            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.DOJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
               
                <td>

                    <a href="E/Action/@item.Id">
                        @Html.CheckBox("Check", true)
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </a>

                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.DOJ)
                </td>
                
             
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a href="E/Edit/@item.Id">
                        <span class="glyphicon glyphicon-pencil" title="Edit"></span>
                    </a>
                    <a href="E/Delete/@item.Id"  onclick="return confirm('Are you wants to delete ');">
                        <span class=" glyphicon glyphicon-trash" title="Delete"></span>
                    </a>
                  
                </td>
            </tr>
        }

    </table>



